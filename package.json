{
  "name": "ccsa-backend",
  "version": "1.0.0",
  "description": "Backend API for CCSA Mobile Application",
  "main": "server.js",
  "scripts": {
    "dev": "next dev -H 0.0.0.0 -p 3000",
    "dev:turbo": "next dev --turbopack -H 0.0.0.0 -p 3000",
    "build": "prisma generate && next build",
    "build:with-db": "prisma generate && prisma db push && next build",
    "build:prod": "NODE_ENV=production prisma generate && next build",
    "start": "NODE_ENV=production next start",
    "start:dev": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "analyze": "cross-env ANALYZE=true next build",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "migrate:safe": "bash scripts/safe-migrate-prisma.sh",
    "migrate:safe-alt": "bash scripts/safe-migrate.sh",
    "migrate:backup": "bash scripts/backup-restore.sh backup",
    "migrate:restore": "bash scripts/backup-restore.sh restore",
    "migrate:verify": "bash scripts/verify-migration.sh && bash scripts/backup-restore.sh verify",
    "postinstall": "prisma generate",
    "vercel-build": "NODE_ENV=production prisma generate && prisma db push && next build",
    "validate:production": "node scripts/validate-production.js",
    "health:check": "curl -f http://localhost:3000/api/health || exit 1",
    "test:api": "curl -f http://localhost:3000/api/validate || exit 1"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "^5.0.0",
    "@radix-ui/react-icons": "^1.3.2",
    "@react-google-maps/api": "^2.20.7",
    "@supabase/supabase-js": "^2.0.0",
    "africastalking": "^0.7.3",
    "bcryptjs": "^2.4.3",
    "canvas": "^3.2.0",
    "chart.js": "^4.4.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "cors": "^2.8.5",
    "cross-env": "^10.0.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "firebase-admin": "^13.4.0",
    "jsonwebtoken": "^9.0.0",
    "jspdf": "^3.0.1",
    "leaflet": "^1.9.4",
    "next": "15.3.8",
    "next-auth": "^4.24.5",
    "nodemailer": "^6.9.8",
    "qrcode": "^1.5.4",
    "qrcode.react": "^4.2.0",
    "react": "19.1.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.48.2",
    "react-leaflet": "^4.2.1",
    "react-select": "^5.8.0",
    "react-table": "^7.8.0",
    "recharts": "^3.1.0",
    "tailwindcss": "^3.3.6",
    "twilio": "^5.7.3",
    "zod": "^3.21.4",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/leaflet": "^1.9.8",
    "@types/node": "20.3.0",
    "@types/nodemailer": "^6.4.14",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@types/react-leaflet": "^3.0.0",
    "@types/react-table": "^7.7.16",
    "autoprefixer": "^10.4.16",
    "eslint": "8.42.0",
    "eslint-config-next": "15.3.6",
    "postcss": "^8.4.32",
    "prisma": "^5.0.0",
    "typescript": "5.1.3"
  },
  "keywords": [
    "agriculture",
    "farmers",
    "management",
    "nigeria",
    "ccsa"
  ],
  "author": "CCSA Development Team",
  "license": "MIT",
  "overrides": {
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6"
  }
}
